@model IEnumerable<E_AuctionProject.Models.ApplyBid>

@{
    ViewData["Title"] = "ViewTender";
}


<table class="table table-bordered table-hover">
    <thead class="bg-dark text-white text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BidNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.B_Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.B_Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BidAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approval)
            </th>
            <th>Choice</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.BidNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.B_Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.B_Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Approval)
            </td>
            <td>
                <a href="~/MenuPage/Reject?id=@item.BidNo" class="btn btn-danger">Reject</a>
                <a href="~/MenuPage/Approved?id=@item.BidNo" class="btn btn-success">Approve</a>
            </td>
        </tr>
}
    </tbody>
</table>
 
@{
    try
    {
        if(TempData["Approved"]!=null)
        {
            <script>
                        swal("Approved", " Sucecssfully!", "success");
            </script>
        }
    }
    catch
    {
        
    }
}
     
@{
    try
    {
        if(TempData["Rejected"]!=null)
        {
            <script>
                        swal("Rejected", " Sucecssfully!", "error");
            </script>
        }
    }
    catch
    {
        
    }
}