@model E_AuctionProject.Models.Login

@{
    ViewData["Title"] = "Login";
}


<div >
    <center>
        <b><font face="Times New Roman" size="7" color="black">WELCOME TO E-AUCTION</font></b>
    </center>
    <div class="row align-items-center p-5">
        <div class="col-md-8">
            <img src="https://thumbs.dreamstime.com/b/online-auction-concept-people-buying-assets-internet-tiny-male-female-characters-around-huge-laptop-gavel-holding-rising-177341993.jpg" width="850" height="480" >
        </div>
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CustomerID" class="control-label"></label>
                    <input asp-for="CustomerID" class="form-control" />
                    <span asp-validation-for="CustomerID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="LOGIN" class="btn btn-success mt-4" />
                </div>
            </form>
            <div class="text-center mt-4 mb-5">
                <b><font face="Times New Roman" size="5" color="black">NEW TO E-AUCTION</font></b><br/>
                <a href="~/Auction/Signup" class="btn btn-warning mt-1 mb-3 fs-6">SIGNUP</a><br/>
                <a href="~/MenuPage/UnViewAuction" class="btn btn-danger">VIEW AUCTION</a><br/>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@{
    try
    {
        if(TempData["msg"] !=null)
        {
            if(TempData["msg"] == "0")
            {
            <script>
                        swal("Error", "Login Failed", "error");
            </script>
            }
        }
    }
    catch
    {
        
    }
}

   